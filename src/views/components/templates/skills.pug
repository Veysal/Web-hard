script(type="text/x-template")#skills-container
  //skills
  .skills
    skills-list(
      :skillsData="skills"
    )

script(type="text/x-template")#skills-list
  ul.skills__list
    li.skills__item(
      v-for="type in types"
      :key="type.id"
    )
      h3.skills__name {{type.name}}
      skills-item(
        :skills="skillsData"
        :type="type"
      )

script(type="text/x-template")#skills-item
  ul.skills__block
    li.skills__tech(
        v-for="skill in skills"
        v-if="type.id === skill.category"
        :key="skill.id"
      )
      skill(
        :skillPercentage="skill.percents"
        :skillTitle="skill.title"
      )

script(type="text/x-template")#skill
  .skill
    svg(viewBox="0 0 120 120" preserveAspectRatio="none").circle__percentage
      circle(cx="60" cy="60" r="50" stroke-width='40' stroke='#00bfa5' fill='none').circle--under.circle
      circle(v-scroll="handleScroll" cx="60" cy="60" r="50" stroke-width='40' stroke='#00bfa5' fill='none' ref="circle").circle--above.circle
    span.skill__tech-name {{skillTitle}}